{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Content Schema",
  "type": "object",
  "required": ["id", "project_id", "type", "category", "title"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "콘텐츠 고유 식별자"
    },
    "project_id": {
      "type": "string",
      "description": "소속 프로젝트 ID"
    },
    "type": {
      "type": "string",
      "enum": ["qa", "documentation", "tutorial", "reference", "example"],
      "description": "콘텐츠 유형"
    },
    "category": {
      "type": "string", 
      "description": "카테고리 (프로젝트별로 정의)"
    },
    "subcategory": {
      "type": "string",
      "description": "하위 카테고리"
    },
    "title": {
      "type": "string",
      "description": "콘텐츠 제목"
    },
    "question": {
      "type": "string",
      "description": "질문 (Q&A 타입인 경우)"
    },
    "answer": {
      "type": "string", 
      "description": "답변 (Q&A 타입인 경우)"
    },
    "content": {
      "type": "string",
      "description": "본문 내용 (기타 타입)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "검색 태그"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string" 
      },
      "description": "검색 키워드"
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "난이도"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "description": "검색 우선순위"
    },
    "related_content": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "관련 콘텐츠 ID 목록"
    },
    "external_links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "url": {"type": "string", "format": "uri"},
          "description": {"type": "string"}
        }
      }
    },
    "code_examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "language": {"type": "string"},
          "code": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "추가 메타데이터"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time" 
    },
    "author": {
      "type": "string",
      "description": "작성자"
    },
    "version": {
      "type": "string",
      "description": "콘텐츠 버전"
    }
  }
}