{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Metadata Schema",
  "type": "object",
  "required": ["id", "name", "version", "domain"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "프로젝트 고유 식별자 (kebab-case)"
    },
    "name": {
      "type": "string",
      "description": "프로젝트 표시명"
    },
    "description": {
      "type": "string",
      "description": "프로젝트 간단 설명"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "시맨틱 버저닝"
    },
    "domain": {
      "type": "string",
      "enum": ["web-development", "mobile-development", "ai-ml", "data-science", "devops", "system-design"],
      "description": "프로젝트 도메인"
    },
    "tech_stack": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "주요 기술 스택"
    },
    "contexts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "프로젝트 컨텍스트 (검색 힌트)"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "icon": {
            "type": "string"
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date"
    },
    "last_updated": {
      "type": "string", 
      "format": "date"
    }
  }
}