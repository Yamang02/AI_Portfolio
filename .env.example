# AI Portfolio Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/ai_portfolio
SPRING_DATASOURCE_USERNAME=portfolio_user
SPRING_DATASOURCE_PASSWORD=portfolio_password

# Development Database (for dev profile)
DEV_DATASOURCE_URL=jdbc:postgresql://localhost:5433/ai_portfolio_dev
DEV_DATASOURCE_USERNAME=dev_user
DEV_DATASOURCE_PASSWORD=dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# GitHub Configuration
GITHUB_USERNAME=your_github_username